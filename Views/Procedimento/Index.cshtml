@model IEnumerable<ProjetoFinalVitor.Models.Procedimento>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/css/butos.css" />
<h1>Procedimentos</h1>

<p>
    <a class="a" asp-action="Create">Adicionar Procedimento</a>
</p>
<div>
    @using (Html.BeginForm("Index", "Procedimento", FormMethod.Get))
    {

        <p class="search">
            Buscar: @Html.TextBox("pesquisa")
            <input class="pesquisa" type="submit" value="Pesquisar" />
        </p>
    }
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProcedimentoNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProcedimentoObservacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipoprocedimento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProcedimentoNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProcedimentoObservacao)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Tipoprocedimento.TipoProcedimentoNome)
            </td>
                <td class="lado">
                    <a class="a" asp-action="Edit" asp-route-id="@item.Id"><span>Editar</span></a> |
                    <a class="a" asp-action="Details" asp-route-id="@item.Id"><span>Detalhes</span></a> |
                    <a class="a" asp-action="Delete" asp-route-id="@item.Id"><span>Deletar</span></a>
                </td>
        </tr>
}
    </tbody>
</table>
