@model ProjetoFinalVitor.Models.Procedimento

@{
    ViewData["Title"] = "Create";
}

<h1>Adicionar Procedimento</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProcedimentoNome" class="control-label"></label>
                <input asp-for="ProcedimentoNome" class="form-control" />
                <span asp-validation-for="ProcedimentoNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProcedimentoObservacao" class="control-label"></label>
                <input asp-for="ProcedimentoObservacao" class="form-control" />
                <span asp-validation-for="ProcedimentoObservacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipoprocedimento" class="control-label"></label>
                <select asp-for="TipoprocedimentoId" class ="form-control" asp-items="ViewBag.TipoprocedimentoId"></select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" /> |
                <a asp-action="Index">Voltar a Lista</a>
            </div>
        </form>
    </div>
</div>

<div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
