@model ProjetoFinalVitor.Models.LocalRealizacao

@{
    ViewData["Title"] = "Create";
}

<h1>Adicionar Local da Realização</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LocalNome" class="control-label"></label>
                <input asp-for="LocalNome" class="form-control" />
                <span asp-validation-for="LocalNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cidade" class="control-label"></label>
                <select asp-for="CidadeId" class ="form-control" asp-items="ViewBag.CidadeId"></select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" /> |
                <a asp-action="Index">Voltar a Lista</a>
            </div>
        </form>
    </div>
</div>

<div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
