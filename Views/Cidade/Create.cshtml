@model ProjetoFinalVitor.Models.Cidade

@{
    ViewData["Title"] = "Create";
}
<link rel="stylesheet" href="~/css/site.css" />
<h1>Adicionar Cidade</h1>


<hr />
<div style="display:flex;" class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CidadeNome" class="control-label"></label>
                <input asp-for="CidadeNome" class="form-control" />
                <span asp-validation-for="CidadeNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <select asp-for="EstadoId" class ="form-control" asp-items="ViewBag.EstadoId"></select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" /> |
                <a asp-action="Index">Voltar a Lista</a>
            </div>
        </form>
    </div>
    <div>

    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
